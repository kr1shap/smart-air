<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#F5F6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2025-11-17 INCIDENT LOG"
                android:textSize="16sp"
                android:textColor="@color/colour_blue"
                android:fontFamily="@font/dm_sans_bold"/>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/26"
                android:textSize="20sp"
                android:textColor="@color/colour_black"
                android:fontFamily="@font/dm_sans_regular"/>

        </LinearLayout>

        <!-- present flags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present Flags"
                android:textSize="14sp"
                android:textColor="#212121"
                android:fontFamily="@font/dm_sans_regular"
                android:layout_marginBottom="0dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/flagsChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="false"
                app:chipSpacingHorizontal="4dp"
                app:chipSpacingVertical="0dp"
                android:gravity="start">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dust"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/dm_sans_regular"
                    app:chipBackgroundColor="@color/colour_indigo"
                    app:chipCornerRadius="15dp"
                    app:chipMinHeight="24dp"
                    app:chipStartPadding="4dp"
                    app:chipEndPadding="4dp"
                    android:textSize="13sp"
                    app:closeIconEnabled="false"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="smoke"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/dm_sans_regular"
                    app:chipBackgroundColor="@color/colour_indigo"
                    app:chipCornerRadius="15dp"
                    app:chipMinHeight="24dp"
                    app:chipStartPadding="4dp"
                    app:chipEndPadding="4dp"
                    android:textSize="13sp"
                    app:closeIconEnabled="false"/>
            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <!-- PEF and Rescue Attempts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEF"
                    android:textSize="14sp"
                    android:textColor="@color/colour_black"
                    android:fontFamily="@font/dm_sans_regular"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/pefValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:background="#F5F6F6"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:fontFamily="@font/dm_sans_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rescue Attempts"
                    android:textSize="14sp"
                    android:textColor="@color/colour_black"
                    android:fontFamily="@font/dm_sans_regular"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/rescueAttemptsValue"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:text="67"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:background="#F5F6F6"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:fontFamily="@font/dm_sans_regular"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Call Emergency Button Clicked -->
        <TextView
            android:id="@+id/emergencyButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call emergency button clicked"
            android:textSize="14sp"
            android:textColor="#0277BD"
            android:fontFamily="@font/dm_sans_regular"
            android:layout_marginBottom="4dp"/>

        <!-- user response -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Response"
            android:textSize="14sp"
            android:textColor="@color/colour_black"
            android:fontFamily="@font/dm_sans_bolditalic"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/userResponseList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Flags pressed\n• Updated recent rescue attempts\n• Emergency called"
            android:textSize="14sp"
            android:textColor="@color/colour_indigo"
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/dm_sans_regular"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>