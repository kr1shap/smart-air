<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MedicineTabFragment">

    <!-- Centered vertical stack of buttons -->
    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_log_dose"
            style="@style/SmartAir.ToggleDefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Dose"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_medicines"
            style="@style/SmartAir.ToggleDefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicines"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_inventory"
            style="@style/SmartAir.ToggleDefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventory"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_streaks"
            style="@style/SmartAir.ToggleDefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Streaks and Badges"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_name"
            style="@style/SmartAir.ToggleDefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ur name pls" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
