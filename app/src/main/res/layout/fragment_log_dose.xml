<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView_log_dose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:backgroundTint="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/container_log_dose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fontFamily="@font/dm_sans_regular">

        <!-- Back button -->
        <Button
            android:id="@+id/btn_back_log_dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@color/colour_blue"
            android:textSize="16sp"
            android:padding="8dp"
            android:fontFamily="@font/dm_sans_regular"/>

        <!-- Date -->
        <TextView
            android:id="@+id/text_today_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today’s Date"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp"
            android:fontFamily="@font/dm_sans_bold"/>

        <!-- CONTROLLER SECTION -->
        <TextView
            android:id="@+id/text_controller_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp"
            android:fontFamily="@font/dm_sans_regular"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_controller_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            android:background="@color/colour_white"
            app:cardElevation="1dp">

            <!-- Outer layout inside card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colour_white"
                android:padding="12dp">

                <!-- Controller logs dynamically added here -->
                <LinearLayout
                    android:id="@+id/controllerLogsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />

                <!-- Button is OUTSIDE the logs container so it won't be cleared -->
                <Button
                    android:id="@+id/btn_add_controller_log"
                    style="@style/SmartAir.Button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Log Controller Dose"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colour_blue"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RESCUE SECTION -->
        <TextView
            android:id="@+id/text_rescue_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp"
            android:fontFamily="@font/dm_sans_regular"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_rescue_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/colour_white"
            app:cardElevation="1dp">

            <!-- Outer layout inside card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colour_white"
                android:padding="12dp">

                <!-- Rescue logs dynamically added here -->
                <LinearLayout
                    android:id="@+id/rescueLogsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- Button is OUTSIDE the logs container so it won't be cleared -->
                <Button
                    android:id="@+id/btn_add_rescue_log"
                    style="@style/SmartAir.Button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Log Rescue Dose"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colour_blue"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/dm_sans_regular"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
