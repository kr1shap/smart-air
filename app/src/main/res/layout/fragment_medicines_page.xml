<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    tools:context=".fragments.MedicineTabFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <Button
            android:id="@+id/btn_back_meds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@color/colour_blue"
            android:textSize="16sp"
            android:padding="8dp"
            android:fontFamily="@font/dm_sans_regular" />


        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Medications"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp"
            android:fontFamily="@font/dm_sans_regular"/>



        <!-- CONTROLLER SECTION -->

        <TextView
            android:id="@+id/text_section_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp"
            android:fontFamily="@font/dm_sans_regular"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#0078C8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Medicine name (controller) -->
                <EditText
                    android:id="@+id/edit_controller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ventolin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:inputType="textPersonName"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/dm_sans_regular"/>

                <Button
                    android:id="@+id/btn_save_controller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="14sp"
                    android:backgroundTint="@color/colour_blue"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/dm_sans_regular"/>


                <!-- Today's usages -->
                <TextView
                    android:id="@+id/text_controller_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today’s usages: 11"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="4dp"
                    android:fontFamily="@font/dm_sans_regular"/>

                <!-- Usages left -->
                <TextView
                    android:id="@+id/text_controller_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usages left: 186/200"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/dm_sans_regular"/>

                <!-- Reminders label -->
                <TextView
                    android:id="@+id/text_controller_reminders_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/dm_sans_regular"/>

                <!-- Reminder buttons -->
                <TextView
                    android:id="@+id/text_controller_reminders_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Once per day"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/dm_sans_regular"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RESCUE SECTION -->

        <TextView
            android:id="@+id/text_section_rescue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp"
            android:fontFamily="@font/dm_sans_regular"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_rescue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#0078C8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Medicine name (rescue) -->
                <EditText
                    android:id="@+id/edit_rescue_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flovent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@android:color/transparent"
                    android:inputType="textPersonName"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/dm_sans_regular"/>

                <Button
                    android:id="@+id/btn_save_rescue_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="14sp"
                    android:backgroundTint="@color/colour_blue"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/dm_sans_regular"/>


                <!-- Usages left -->
                <TextView
                    android:id="@+id/text_rescue_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usages left: 56/200"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="12dp"
                    android:fontFamily="@font/dm_sans_regular"/>

                <!-- Reminders label -->
                <TextView
                    android:id="@+id/text_rescue_reminders_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingBottom="4dp"
                    android:fontFamily="@font/dm_sans_regular"/>

                <!-- No reminders text -->
                <TextView
                    android:id="@+id/text_rescue_reminders_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Reminders"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/dm_sans_regular"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
