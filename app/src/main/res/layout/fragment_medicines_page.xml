<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragments.MedicineTabFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Medications"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp" />

        <!-- CONTROLLER SECTION -->

        <TextView
            android:id="@+id/text_section_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controller"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#0078C8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Medicine name (controller) -->
                <TextView
                    android:id="@+id/text_controller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventolin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingBottom="12dp" />

                <!-- Today's usages -->
                <TextView
                    android:id="@+id/text_controller_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today’s usages: 11"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="4dp" />

                <!-- Usages left -->
                <TextView
                    android:id="@+id/text_controller_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usages left: 186/200"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="12dp" />

                <!-- Reminders label -->
                <TextView
                    android:id="@+id/text_controller_reminders_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingBottom="8dp" />

                <!-- Reminder buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_controller_reminder_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 PM"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btn_controller_reminder_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="6:00 PM"
                        android:textAllCaps="false" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- RESCUE SECTION -->

        <TextView
            android:id="@+id/text_section_rescue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rescue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_rescue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#0078C8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Medicine name (rescue) -->
                <TextView
                    android:id="@+id/text_rescue_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flovent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingBottom="12dp" />

                <!-- Today's usages -->
                <TextView
                    android:id="@+id/text_rescue_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today’s usages: 1"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="4dp" />

                <!-- Usages left -->
                <TextView
                    android:id="@+id/text_rescue_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usages left: 56/200"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:paddingBottom="12dp" />

                <!-- Reminders label -->
                <TextView
                    android:id="@+id/text_rescue_reminders_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminders:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingBottom="4dp" />

                <!-- No reminders text -->
                <TextView
                    android:id="@+id/text_rescue_reminders_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Reminders"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
