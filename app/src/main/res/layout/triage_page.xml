<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!-- LOADING SCREEN -->
    <View
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
    <!-- TRIAGE SESSION PAGE -->
    <LinearLayout
        android:id="@+id/triageContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timerTextV"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#C1DBE3"
            android:gravity="center"
            android:textColor="#007CBE"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#D9D9D9"
            android:gravity="center"
            android:text="This is a guidance, not a diagnosis. If in doubt, call emergency"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
            <include
                android:id="@+id/redFlagInclude"
                layout="@layout/quick_red_flags" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/textView2"
                style="@style/SmartAir.Text.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Rescue Attempts"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/SmartAir.Text.body"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="How many times have you used the rescue inhaler"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/textrra"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="#EAF4FF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    style="@style/SmartAir.Text.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PEF (Optional)"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/textpef"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="#EAF4FF" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button3"
                    style="@style/SmartAir.Button1"
                    android:layout_width="0dp"
                    android:layout_height="165dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Call Emergency Now"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:icon="@drawable/emergency_call"
                    app:iconGravity="top"
                    app:iconPadding="4dp"
                    app:iconSize="70dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button4"
                    style="@style/SmartAir.Button1"
                    android:layout_width="0dp"
                    android:layout_height="165dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Start Home Steps"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:icon="@drawable/outline_format_list_numbered"
                    app:iconGravity="top"
                    app:iconPadding="4dp"
                    app:iconSize="80dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageButton
                    android:id="@+id/timer"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="12dp"
                    android:background="@android:color/holo_blue_light"
                    android:padding="6dp"
                    android:src="@drawable/timer" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startriage"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:text="HAVING TROUBLE BREATHING?"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:icon="@drawable/timer"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/endtriage"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:text="BETTER"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:icon="@drawable/timer"
                    app:iconGravity="textStart" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- PARENT ACTION PLAN CONTENT -->
    <ScrollView
        android:id="@+id/parentContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/homeStepsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Start Home Steps"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#007CBE"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/zoneToggleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/zoneToggleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnZoneGreen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Green"
                    android:checked="true" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnZoneYellow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yellow" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnZoneRed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Red" />
            </com.google.android.material.button.MaterialButtonToggleGroup>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/childDropdownLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Child"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_marginBottom="16dp">

                <AutoCompleteTextView
                    android:id="@+id/autocompChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddStep"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    style="?attr/borderlessButtonStyle"
                    app:icon="@drawable/addsteps"
                    app:iconTint="@color/colour_blue"
                    app:iconPadding="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/stepsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
    <!-- CHILD START HOME STEPS PAGE -->
    <ScrollView
        android:id="@+id/childStepsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true"
        android:background="@color/zone_red_bg">

        <LinearLayout
            android:id="@+id/childStepsRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/zone_red_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBackToTriage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Back to triage"
                    android:src="@drawable/backsteps"
                    android:tint="@color/colour_blue" />

                <TextView
                    android:id="@+id/childStepsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="#007CBE"
                    android:text="Start Home Steps"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zoneRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/txtZoneLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zone:"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtChildZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="--"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <include
                android:id="@+id/redFlagInclude"
                layout="@layout/quick_red_flags" />

            <LinearLayout
                android:id="@+id/childStepsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
