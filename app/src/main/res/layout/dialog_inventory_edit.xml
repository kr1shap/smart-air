<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".fragments.InventoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Inventory"
            android:fontFamily="@font/dm_sans_bold"
            android:textColor="@color/colour_black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/dm_sans_bold"
            android:textSize="16sp"
            android:textColor="@color/colour_blue"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name of Medication"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dm_sans_regular"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Left"
            android:fontFamily="@font/dm_sans_bold"
            android:textSize="16sp"
            android:textColor="@color/colour_blue"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount left"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dm_sans_regular"
            android:inputType="textCapWords"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchase Date"
            android:fontFamily="@font/dm_sans_bold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#007CBE"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/datepickerpur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Purchase Date"
            android:textSize="14sp"
            android:backgroundTint="@color/colour_blue"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date"
            android:fontFamily="@font/dm_sans_bold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colour_blue"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/datepickerexp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Expiry Date"
            android:textSize="14sp"
            android:backgroundTint="@color/colour_blue"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_save_edits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="14sp"
            android:backgroundTint="@color/colour_blue"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>