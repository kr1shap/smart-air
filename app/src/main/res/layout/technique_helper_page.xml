<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- header and progress -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 8"
            android:textColor="@color/colour_indigo"
            android:fontFamily="@font/dm_sans_bold"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- main card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stepCard"
        android:layout_width="0dp"
        android:layout_height="430dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- title of step -->
                <TextView
                    android:id="@+id/tvStepTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shake the Inhaler"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/colour_indigo"
                    android:gravity="center"/>

                <!-- animated step -->

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_gravity="center_horizontal"
                    android:keepScreenOn="true"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/animationView"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:contentDescription="Step animation"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tvStepDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shake your inhaler well for 5 seconds to mix the medicine properly."
                    android:textSize="15sp"
                    android:fontFamily="@font/dm_sans_regular"
                    android:textColor="@color/colour_blue"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"/>

                <!-- tip desc -->

                <!-- Tips section (optional) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/tipsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="@color/colour_blue"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/outline_exclamation_24"
                            app:tint="@color/white"
                            android:contentDescription="Tip icon"/>

                        <TextView
                            android:id="@+id/tvTip"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/dm_sans_regular"
                            android:text="Tip: Listen for the rattling sound to know it's mixed well!"
                            android:textSize="12sp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom buttons -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- I Did It button -->
        <Button
            android:id="@+id/btnIDidIt"
            style="@style/SmartAir.Button1"
            android:layout_width="180dp"
            android:layout_marginEnd="8dp"
            android:layout_height="56dp"
            android:text="I Did It!" />
        <!-- skip step button -->
        <Button
            android:id="@+id/btnSkip"
            style="@style/SmartAir.Button1"
            android:layout_width="180dp"
            android:layout_marginStart="8dp"
            android:layout_height="56dp"
            android:text="Skip this step" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>