<resources>
    <style name="SmartAir.Button1" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textColor">@color/colour_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="backgroundTint">@color/colour_blue</item>
        <item name="rippleColor">@color/colour_lightBlue</item>
        <item name="elevation">4dp</item>
    </style>
    <style name="SmartAir.Button2" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textColor">@color/colour_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
        <item name="backgroundTint">@color/colour_lightBlue</item>
        <item name="rippleColor">@color/colour_lightBlue</item>
        <item name="elevation">4dp</item>
    </style>
    <style name="SmartAir.Text.title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/colour_blue</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="SmartAir.Text.body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colour_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

</resources>